@model login_net.Models.UserLogin;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method="post">
        <h1>Login</h1>
        <input type="text" placeholder="Username" asp-for="Username" />
        <input type="text" placeholder="Password" asp-for="Password" />
        <label><input type="checkbox" asp-for="KeepLoggedIn" />Keep me logged in.</label>
        <button type="submit">Login</button>

        @if (ViewData["message"] != null)
        {
            <br/>
            <br/>
            <label>@ViewData["message"]</label>
        }
    </form>
</body>
</html>
